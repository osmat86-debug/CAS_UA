<?xml version="1.0" encoding="UTF-8"?>
<iq:manifest xmlns:iq="http://www.garmin.com/xml/connectiq" version="3.2.0">
  <iq:application
      id="com.cas.ua.watchface"
      uuid="9C0B1DDA-0F11-4F39-A8B0-CA5D0A11A0A1"
      name="CAS_UA"
      type="watchface"
      entry="App"
      minApiLevel="3.2.0">

    <iq:products>
      <iq:product id="fenix6"/>
    </iq:products>

    <iq:permissions>
      <iq:uses-permission id="Position"/>
      <iq:uses-permission id="UserProfile"/>
      <iq:uses-permission id="Activity"/>
      <iq:uses-permission id="SensorHistory"/>
      <iq:uses-permission id="Weather"/>
      <iq:uses-permission id="Communications"/>
    </iq:permissions>

    <iq:languages>
      <iq:language>uk</iq:language>
    </iq:languages>

    <iq:settings>
      <iq:setting id="topBlockMode" name="Верхній блок" type="list" default="sun">
        <iq:option name="Схід/Захід" value="sun"/>
        <iq:option name="Пульс" value="hr"/>
        <iq:option name="Стрес" value="stress"/>
        <iq:option name="Погода (текст)" value="weather"/>
        <iq:option name="Тиск (поточний)" value="pressure"/>
        <iq:option name="Місто" value="city"/>
        <iq:option name="— Історія кроків (7 днів)" value="steps_history"/>
        <iq:option name="— Історія активності (7 днів)" value="activity_history"/>
        <iq:option name="— Історія тиску (7 год)" value="pressure_history"/>
        <iq:option name="Приховати" value="hidden"/>
      </iq:setting>

      <iq:setting id="bottomBlockMode" name="Нижній блок" type="list" default="city">
        <iq:option name="Схід/Захід" value="sun"/>
        <iq:option name="Пульс" value="hr"/>
        <iq:option name="Стрес" value="stress"/>
        <iq:option name="Погода (текст)" value="weather"/>
        <iq:option name="Тиск (поточний)" value="pressure"/>
        <iq:option name="Місто" value="city"/>
        <iq:option name="Приховати" value="hidden"/>
      </iq:setting>

      <iq:setting id="dateFormat" name="Формат дати" type="list" default="DMW">
        <iq:option name="День–Місяць–День тижня" value="DMW"/>
        <iq:option name="День тижня–День–Місяць" value="WDM"/>
        <iq:option name="День–Місяць–Рік" value="DMY"/>
      </iq:setting>

      <iq:setting id="progressBarMode" name="Прогрес-бар" type="list" default="steps">
        <iq:option name="Кроки" value="steps"/>
        <iq:option name="Стрес" value="stress"/>
        <iq:option name="Батарея" value="battery"/>
        <iq:option name="Активні хвилини" value="active_minutes"/>
      </iq:setting>

      <iq:setting id="batteryDisplay" name="Батарея (верх)" type="list" default="icon">
        <iq:option name="Іконка" value="icon"/>
        <iq:option name="Текст 100%" value="text"/>
      </iq:setting>

      <iq:setting id="colorScheme" name="Тема" type="list" default="dark">
        <iq:option name="Чорний фон / білий текст" value="dark"/>
        <iq:option name="Білий фон / чорний текст" value="light"/>
        <iq:option name="Автоматично (за сходом/заходом)" value="auto"/>
      </iq:setting>
    </iq:settings>
  </iq:application>
</iq:manifest>
